{% extends 'base.html.twig' %}
{% block body %}

<link rel="icon" type="image/x-icon" href="{{asset('css/bootstrap.css')}}">
<div>
<table class="table table-hover">
  <thead>
    <tr class="table-dark">
      <th >id</th>
      <th >Username</th>
      <th >Email</th>
       <th>Telephone</th>
      <th >Action</th>
    </tr>
  </thead>
  <tbody>
  {% for user in users %}
    <tr class="table-primary">
      <td>{{user.id}}</td>
      <td>{{user.name}}</td>
      <td>{{user.email}}</td>
      <td>{{user.telephone}}</td>
      <td>
      <a href=" view/{{ user.id }}" class="btn btn-primary btn-xs"> View</a>
      <a href=" edit/{{ user.id }}"
       class="btn btn-success btn-xs"> Edit</a>
      <a href="delete/{{ user.id }}" class="btn btn-danger btn-xs"> Delete</a>
      </td>
    </tr>
  {% else %}
    <tr>
       <td>No Records Found !!</td>
    </tr>
    {% endfor %}
  </tbody>
</table> 
</div>
{% endblock %}